---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---
<BaseLayout title="Luna Araújo — Home" description="Personal website">
  <section id="about" class="space-y-4">
    <h1 class="text-3xl font-bold">Hi, I'm Luna.</h1>
    <p class="text-[var(--muted)]">
      This is a minimal, single-column personal website with markdown-driven
      content. Use this section to tell your career journey and highlight your
      skills.
    </p>
  </section>

  <section id="portfolio" class="mt-12 space-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-semibold">Portfolio</h2>
      <a class="link text-sm" href="/projects">View all</a>
    </div>
    <div class="flex gap-4 overflow-x-auto pb-4">
      {projects.map((project) => (
        <a class="card min-w-[260px]" href={`/projects/${project.slug}`}> 
          <h3 class="text-lg font-semibold">{project.data.title}</h3>
          <p class="text-sm text-[var(--muted)]">{project.data.summary}</p>
        </a>
      ))}
    </div>
  </section>

  <section class="mt-12 space-y-4">
    <h2 class="text-2xl font-semibold">Latest blog</h2>
    <p class="text-[var(--muted)]">
      Check out the blog for updates, reflections, and technical notes.
    </p>
    <a class="link" href="/blog">Go to blog</a>
  </section>
</BaseLayout>
